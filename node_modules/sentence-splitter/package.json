{
  "name": "sentence-splitter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azu/sentence-splitter.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/azu/sentence-splitter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/azu/sentence-splitter/issues"
  },
  "version": "2.3.2",
  "description": "split {japanese, english} text into sentences.",
  "main": "lib/sentence-splitter.js",
  "bin": {
    "sentence-splitter": "./bin/cmd.js"
  },
  "files": [
    "bin",
    "lib",
    "src"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir lib --source-maps",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "prepublish": "npm run --if-present build",
    "test": "mocha",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'",
    "precommit": "lint-staged",
    "postcommit": "git reset"
  },
  "keywords": [
    "text",
    "analytics",
    "textlint"
  ],
  "dependencies": {
    "concat-stream": "^1.5.2",
    "structured-source": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-plugin-jsdoc-to-assert": "^1.3.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.18.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "mocha": "^2.3.3",
    "power-assert": "^1.4.2",
    "prettier": "^1.7.4"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
